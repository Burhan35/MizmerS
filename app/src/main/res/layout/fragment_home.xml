<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan_blurlu"
    tools:context="com.example.mizmer2.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/text_anasayfa_mizac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:text="Mizaç : DTM 2-3"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button_test_coz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageProfilePhoto"
        app:layout_constraintTop_toBottomOf="@+id/imageProfilePhoto" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="1dp"
        android:text="ANASAYFA"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageProfilePhoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageProfilePhoto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/image_test_kisi"
        app:layout_constraintBottom_toTopOf="@+id/text_anasayfa_mizac"
        app:layout_constraintEnd_toStartOf="@+id/text_anasayfa_adı_soyadı"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/text_anasayfa_adı_soyadı"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="39dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:text="Adı Soyadı"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/text_anasayfa_mizac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageProfilePhoto" />

    <Button
        android:id="@+id/button_test_coz"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="13dp"
        android:text="Testini çöz"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageProfilePhoto"
        app:layout_constraintTop_toBottomOf="@+id/text_anasayfa_mizac" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="ARKADAŞLARIM"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/button_arkadaş1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_test_coz" />

    <Button
        android:id="@+id/button_arkadaş1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:text="Birinci Arkadaş"
        app:layout_constraintBottom_toTopOf="@+id/button_arkadas_ekle"
        app:layout_constraintStart_toStartOf="@+id/button_arkadas_ekle"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/button_arkadas_ekle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="61dp"
        android:layout_marginEnd="113dp"
        android:text="Arkadaş Ekle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_arkadaş1" />

    <Button
        android:id="@+id/button_cıkıs"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="1dp"
        android:text="Çıkış"
        app:layout_constraintBottom_toTopOf="@+id/text_anasayfa_adı_soyadı"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
